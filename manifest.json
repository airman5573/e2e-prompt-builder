{
  "manifest_version": 3,
  "name": "Element Inspector",
  "version": "1.0.0",
  "description": "Highlight DOM elements, navigate with the keyboard, and copy element IDs from any page.",
  "action": {
    "default_title": "Toggle Element Inspector",
    "default_icon": {
      "16": "icons/inspector-off-16.png",
      "32": "icons/inspector-off-32.png",
      "48": "icons/inspector-off-48.png",
      "128": "icons/inspector-off-128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["tabs"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/inspector-off-16.png",
    "32": "icons/inspector-off-32.png",
    "48": "icons/inspector-off-48.png",
    "128": "icons/inspector-off-128.png"
  }
}
